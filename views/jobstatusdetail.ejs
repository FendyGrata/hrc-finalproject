   <!--//tags -->
   <link href="/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
   <link href="/css/style.css" rel="stylesheet" type="text/css" media="all" />

   <link href="/css/font-awesome.css" rel="stylesheet">
   <!-- //for bootstrap working -->
   <link href="//fonts.googleapis.com/css?family=Work+Sans:200,300,400,500,600,700" rel="stylesheet">
   <link href='//fonts.googleapis.com/css?family=Lato:400,100,100italic,300,300italic,400italic,700,900,900italic,700italic'
       rel='stylesheet' type='text/css'>
 </head>
 <body>
 <!-- header -->

   <div class="header" id="home">
     <div class="content white agile-info">
       <nav class="navbar navbar-default" role="navigation">
         <div class="container">
           <div class="navbar-header">
             <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
           <span class="sr-only">Toggle navigation</span>
           <span class="icon-bar"></span>
           <span class="icon-bar"></span>
           <span class="icon-bar"></span>
         </button>
             <a class="navbar-brand" href="/">
               <img src="/images/logo.png" width="120" height="50">
             </a>
           </div>
           <!--/.navbar-header-->
           <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
             <nav class="link-effect-2" id="link-effect-2">
               <ul class="nav navbar-nav">
                 <li class="active"><a href="/company" class="effect-3">Home</a></li>
                 <li class="dropdown">

                   <a href="/company/createjob" class="effect-3">Create Jobs</a>

                 </li>
                 <li class="dropdown">
                   <a  href="/company/quickhire" class="effect-3">Quick Hire</a>

                 </li>


                 <li><a href="/company/jobstatus" class="effect-3">Job Status</a></li>





           <li>
           <div class="dropdown" >
               <img  src="/images/profile-icon.png" width="33" height="33" >


             <div class="dropdown-content">

                <h3>My Profile</h3>

             <hr>
                 <% include partials/headercompany %>
             </div>
           </div>

           </li>




               </ul>
             </nav>
           </div>


           <!--/.navbar-collapse-->
           <!--/.navbar-->
         </div>
       </nav>
     </div>
   </div>
 <hr style="margin-bottom: 0;">
 <div class="container">
   <div class="well">
     <div class="row">
       <h4><%= jobdata.title %></h4>
       <p>
         <%= jobdata.description %>
       </p>
       <% for (i = 0; i < jobdata.candidate.length ; i++) { %>
         <% if (jobdata.candidate[i].status === "In Process") { %>
           <div class="col-xs-8">
             <span><%= jobdata.candidate[i].name %></span>
             <span><%= jobdata.candidate[i].email %></span>
           </div>
           <form method="post" action="/company/jobstatus/<%= jobdata._id %>/<%= jobdata.candidate[i].email %>">
           <div class="col-xs-2">
             <select class="form-control" name="decision">
               <option value="Process to Interview">
                 Process to Interview
               </option>
               <option value="Reject">
                 Reject
               </option>
             </select>
           </div>

           <div class="col-xs-2">
             <button type="submit" name="process" value="Process">Process</button>
           </div>
           </form>
         <% } else { %>

         <% } %>
       <% } %>
     </div>
   </div>
 </div>

  </body>
</html>
